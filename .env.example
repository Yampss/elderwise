# ElderWise Environment Configuration
# Copy this file to .env and fill in your values

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Application Settings
ELDERWISE_DEBUG=false
ELDERWISE_LOG_LEVEL=INFO

# Data Storage Settings
ELDERWISE_DATA_DIR=./data
ELDERWISE_MAX_UPLOAD_SIZE_MB=50

# Audio Settings
ELDERWISE_MAX_RECORDING_MINUTES=10
ELDERWISE_AUDIO_QUALITY=high

# AI Features
ELDERWISE_ENABLE_AI_FEATURES=true
ELDERWISE_AI_FALLBACK_MODE=true

# UI Settings
ELDERWISE_THEME=light
ELDERWISE_ACCESSIBILITY_MODE=false

# Security Settings
ELDERWISE_ENABLE_CONTENT_MODERATION=true
ELDERWISE_REQUIRE_USER_REGISTRATION=false

# Analytics Settings
ELDERWISE_ENABLE_ANALYTICS=true
ELDERWISE_PRIVACY_MODE=true

# Development Settings (for contributors)
ELDERWISE_DEV_MODE=false
ELDERWISE_MOCK_AI_RESPONSES=false
